{
  "$schema": "https://mintlify.com/schema.json",
  "name": "SAGE Docs",
  "logo": {
    "dark": "/logo/dark.png",
    "light": "/logo/light.png"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#021D16",
    "light": "#EDEDED",
    "dark": "#021D16",
    "anchors": {
      "from": "#021D16",
      "to": "#EDEDED"
    },
    "background": {
      "light": "#EDEDED",
      "dark": "#000000"
    }
  },
  "theme": "quill",
  "background": {
    "style": "gradient"
  },
  "font": {
    "headings": {
      "family": "IBM Plex Mono"
    },
    "body": {
      "family": "IBM Plex Mono"
    }
  },
  "sidebar": {
    "items": "card"
  },
  "topbar": {
    "style": "default"
  },
  "search": {
    "location": "top",
    "prompt": "Search docs"
  },
  "codeBlock": {
    "mode": "auto"
  },
  "topbarCtaButton": {
    "name": "Go to sage.new",
    "url": "https://sage.new"
  },
  "navigation": [
    {
      "group": "Get Started",
      "pages": ["introduction", "quickstart", "development"]
    },
    {
      "group": "Essentials",
      "pages": [
        "essentials/markdown",
        "essentials/code",
        "essentials/images",
        "essentials/settings",
        "essentials/navigation",
        "essentials/reusable-snippets"
      ]
    },
    {
      "group": "API Documentation",
      "pages": ["api-reference/introduction"]
    },
    {
      "group": "Endpoint Examples",
      "pages": [
        "api-reference/endpoint/get",
        "api-reference/endpoint/create",
        "api-reference/endpoint/delete"
      ]
    }
  ],
  "footerSocials": {
    "x": "https://x.com/sageforall"
  },
  "feedback": {
    "raiseIssue": true,
    "suggestEdit": true,
    "thumbsRating": true
  },
  "seo": {
    "indexHiddenPages": true
  }
}
