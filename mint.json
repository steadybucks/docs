{
  "$schema": "https://mintlify.com/schema.json",
  "name": "SAGE Docs",
  "logo": {
    "dark": "/images/logo-dark.png",
    "light": "/images/logo-light.png"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#021D16",
    "light": "#EDEDED",
    "dark": "#021D16",
    "anchors": {
      "from": "#021D16",
      "to": "#EDEDED"
    },
    "background": {
      "light": "#EDEDED",
      "dark": "#000000"
    }
  },
  "theme": "quill",
  "background": {
    "style": "gradient"
  },
  "font": {
    "headings": {
      "family": "IBM Plex Mono"
    },
    "body": {
      "family": "IBM Plex Mono"
    }
  },
  "sidebar": {
    "items": "card"
  },
  "topbar": {
    "style": "default"
  },
  "search": {
    "location": "top",
    "prompt": "Search docs"
  },
  "codeBlock": {
    "mode": "dark"
  },
  "topbarCtaButton": {
    "name": "Go to sage.new",
    "url": "https://sage.new"
  },
  "navigation": [
    {
      "group": "Getting Started",
      "pages": ["introduction"]
    },
    {
      "group": "SAGE",
      "pages": ["sage/overview", "sage/architecture", "sage/agents"]
    },
    {
      "group": "SAGE Token",
      "pages": ["token/overview", "token/economics", "token/utility"]
    },
    {
      "group": "SAGEUSD",
      "pages": [
        "sageusd/overview",
        "sageusd/features",
        "sageusd/points-program"
      ]
    },
    {
      "group": "Initial Stablecoin Offering",
      "pages": ["iso/overview", "iso/mechanism", "iso/benefits"]
    }
  ],
  "footerSocials": {
    "x": "https://x.com/sageforall"
  },
  "feedback": {
    "raiseIssue": true,
    "suggestEdit": true,
    "thumbsRating": true
  },
  "seo": {
    "indexHiddenPages": true
  }
}
